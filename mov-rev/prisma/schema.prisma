generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id         Int         @id @default(autoincrement())
    username   String      @unique
    password   String
    watchlist  Watchlist[]
    reviewlist Review[]
    createdAt  DateTime    @default(now())
}

model Watchlist {
    userId Int
    imdbId String
    title  String
    year   String
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@id([userId, imdbId])
}

model Review {
    id        Int      @id @default(autoincrement())
    userId    Int
    imdbId    String
    rating    Int
    text      String?
    createdAt DateTime @default(now())
    user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([userId, imdbId])
}
